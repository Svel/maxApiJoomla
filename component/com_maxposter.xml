        <param name="dealer_id" default="5" />
        <param name="password" default="555" />
        <param name="api_version" default="1" />
        <!-- Постраничка -->
        <param name="rows_by_page" default="20" />
        <param name="rows_by_request" default="100" />
        <!-- поиск -->
        <param name="prefix" default="max_" />
    </params>
